<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="@drawable/title_frist_bg_black"
     >
	<com.pangu.neusoft.CustomView.MarqueeTextView 
	    android:id="@+id/notice"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:singleLine="true"
	    android:ellipsize="marquee"
	    android:textSize="10dp"
	    android:textColor="@color/black"
	    android:background="@color/white"
	    />

	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_below="@+id/notice"
	    android:paddingLeft="@dimen/activity_padding_width"
	    android:paddingRight="@dimen/activity_padding_width" >

	    <Button
	    android:id="@+id/title_drug_back"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_centerVertical="true"
	    android:layout_marginLeft="10dp"
	    android:background="@layout/back_back_press"
	    android:gravity="center"
	     />

	<TextView
	    android:id="@+id/drug_title_title"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignBaseline="@+id/title_drug_back"
	    android:layout_alignBottom="@+id/title_drug_back"
	    android:layout_centerHorizontal="true"
	    android:layout_margin="2dp"
	    android:gravity="center"
	    android:text="药房优惠"
	    android:textColor="#FFFFFF"
	    android:textSize="@dimen/button_textsize" />

	<Button
	    android:id="@+id/title_drug_map"
	    android:layout_width="80dp"
	    android:layout_height="50dp"
	    android:layout_alignBaseline="@+id/drug_title_title"
	    android:layout_alignBottom="@+id/drug_title_title"
	    android:layout_alignParentRight="true"
	    android:layout_margin="2dp"
	    android:layout_marginRight="18dp"
	    android:text="附近"
	    android:background="@drawable/button_def_img" />
	    
	</RelativeLayout>
	
</RelativeLayout>