<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/reg_username"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="用户名：" />

    <EditText
        android:id="@+id/reg_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/textView3"
        android:background="@layout/edittext_style"
        android:digits="1234567890"
        android:ems="10"
        android:hint="请输入手机号码"
        android:inputType="number"
        android:paddingLeft="5dp" >

       
    </EditText>

    <EditText
        android:id="@+id/card_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/reg_username"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/reg_username"
        android:layout_marginTop="20dp"
        android:background="@layout/edittext_style"
        android:ems="10"
        android:hint="请输入18位身份证号码"
        android:paddingLeft="5dp" />

    <TextView
        android:id="@+id/seria_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/card_num"
        android:layout_alignBottom="@+id/card_num"
        android:layout_alignParentLeft="true"
        android:text="身份证号" />

    <Button
        android:id="@+id/reg_reg_btn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/reg_sex"
        android:layout_margin="20dp"
        android:background="@layout/tab_btn_press"
        android:text="保存信息" />

    <EditText
        android:id="@+id/reg_name"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/card_num"
        android:layout_marginTop="14dp"
        android:layout_toRightOf="@+id/seria_num"
        android:background="@layout/edittext_style"
        android:ems="10"
        android:hint="请输入完整姓名"
        android:paddingLeft="5dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/reg_name"
        android:layout_alignBottom="@+id/reg_name"
        android:layout_alignParentLeft="true"
        android:text="姓名" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/reg_sex"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="14dp"
        android:text="性别" />

    <Spinner
        android:id="@+id/reg_sex"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/reg_name"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@+id/seria_num"
        android:background="@layout/edittext_style"
        android:entries="@array/sex"
        android:paddingLeft="5dp" />
</RelativeLayout>

</ScrollView>