<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingLeft="@dimen/activity_padding_width"
        android:paddingRight="@dimen/activity_padding_width" >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="23dp"
            android:text="用户名：" />

        <EditText
            android:id="@+id/userphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView4"
            android:layout_alignBottom="@+id/textView4"
            android:layout_alignLeft="@+id/ver_pass"
            android:layout_alignParentRight="true"
            android:background="@layout/edittext_style"
            android:digits="1234567890"
            android:ems="10"
            android:hint="请输入手机号码"
            android:inputType="number"
            android:paddingLeft="5dp" />

        <EditText
            android:id="@+id/ver_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/new_pass"
            android:layout_below="@+id/userphone"
            android:layout_marginTop="23dp"
            android:layout_toLeftOf="@+id/get_ver"
            android:background="@layout/edittext_style"
            android:digits="1234567890"
            android:ems="10"
            android:hint="请输入验证码"
            android:inputType="number"
            android:paddingLeft="5dp" />

        <Button
            android:id="@+id/get_ver"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ver_pass"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/ver_pass"
            android:background="@layout/tab_btn_press"
            android:text="@string/get_captcha" />

        <TextView
            android:id="@+id/list_otherstore_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/ver_pass"
            android:layout_alignBottom="@+id/ver_pass"
            android:layout_alignParentLeft="true"
            android:text="验证码：" />

        <EditText
            android:id="@+id/new_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/list_otherstore_3"
            android:layout_alignBottom="@+id/list_otherstore_3"
            android:layout_alignLeft="@+id/confirm_pass"
            android:layout_alignParentRight="true"
            android:layout_marginTop="23dp"
            android:background="@layout/edittext_style"
            android:ems="10"
            android:hint="请输入六位数密码"
            android:inputType="numberPassword"
            android:maxLength="6"
            android:paddingLeft="5dp" />

        <TextView
            android:id="@+id/list_otherstore_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/get_ver"
            android:layout_marginTop="23dp"
            android:text="新密码：" />

        <TextView
            android:id="@+id/list_otherstore_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/new_pass"
            android:layout_marginTop="23dp"
            android:text="确认密码：" />

        <EditText
            android:id="@+id/confirm_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/list_otherstore_1"
            android:layout_toRightOf="@+id/list_otherstore_1"
            android:background="@layout/edittext_style"
            android:ems="10"
            android:hint="请输入六位数密码"
            android:inputType="numberPassword"
            android:maxLength="6"
            android:paddingLeft="5dp" />

        <Button
            android:id="@+id/reset_pass"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="230dp"
            android:background="@layout/tab_btn_press"
            android:text="确认保存" />
    </RelativeLayout>

</ScrollView>