<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/card_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/infos_text"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/infos_text"
        android:text="TextView"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/card_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/card_username"
        android:layout_alignBottom="@+id/card_username"
        android:layout_marginLeft="24dp"
        android:layout_toRightOf="@+id/card_username"
        android:text="TextView"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/infos_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/seria_num"
        android:layout_marginTop="14dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/seria_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/infos_text"
        android:layout_alignBottom="@+id/infos_text"
        android:layout_alignParentLeft="true"
        android:text="诊疗卡信息："
        android:visibility="invisible" />

    <EditText
        android:id="@+id/OwnerAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/OwnerPhone"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:text="盘古开天" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/OwnerAddress"
        android:layout_alignBottom="@+id/OwnerAddress"
        android:layout_alignParentLeft="true"
        android:text="地址：" />

    <EditText
        android:id="@+id/OwnerEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/OwnerAddress"
        android:layout_alignLeft="@+id/OwnerAddress"
        android:layout_alignParentRight="true"
        android:ems="10" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/OwnerEmail"
        android:layout_alignBottom="@+id/OwnerEmail"
        android:layout_alignParentLeft="true"
        android:text="Email：" />

    <EditText
        android:id="@+id/OwnerIDCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/OwnerEmail"
        android:layout_alignLeft="@+id/OwnerEmail"
        android:layout_alignParentRight="true"
        android:ems="10" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/OwnerIDCard"
        android:layout_alignBottom="@+id/OwnerIDCard"
        android:layout_alignParentLeft="true"
        android:text="身份证：" />

    <EditText
        android:id="@+id/OwnerTel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/OwnerIDCard"
        android:layout_alignLeft="@+id/OwnerIDCard"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:text="18927268160" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/OwnerTel"
        android:layout_alignBottom="@+id/OwnerTel"
        android:layout_alignParentLeft="true"
        android:text="电话：" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/OwnerPhone"
        android:layout_alignBottom="@+id/OwnerPhone"
        android:layout_alignParentLeft="true"
        android:text="手机：" />

    <EditText
        android:id="@+id/OwnerPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/OwnerTel"
        android:layout_alignLeft="@+id/OwnerAge"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:text="18927268160" />

    <EditText
        android:id="@+id/OwnerAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/OwnerPhone"
        android:layout_alignLeft="@+id/OwnerSex"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:text="1" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/OwnerAge"
        android:layout_alignBottom="@+id/OwnerAge"
        android:layout_alignParentLeft="true"
        android:text="年龄：" />

    <RadioGroup
        android:id="@+id/OwnerSex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/OwnerAge"
        android:layout_alignLeft="@+id/Owner"
        android:layout_alignParentRight="true"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/radio0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="男" />

        <RadioButton
            android:id="@+id/radio1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="女" />
    </RadioGroup>

    <EditText
        android:id="@+id/Owner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/OwnerSex"
        android:layout_alignLeft="@+id/MedicalCardCode"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:text="黎泳仪" />

    <EditText
        android:id="@+id/MedicalCardCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Owner"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/textView11"
        android:ems="10"
        android:text="4406000006000174421" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Owner"
        android:layout_alignBottom="@+id/Owner"
        android:layout_alignParentLeft="true"
        android:text="姓名：" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/MedicalCardCode"
        android:layout_alignBottom="@+id/MedicalCardCode"
        android:layout_alignParentLeft="true"
        android:text="卡号：" />

    <EditText
        android:id="@+id/MedicalCardPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/MedicalCardCode"
        android:layout_alignLeft="@+id/MedicalCardCode"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/MedicalCardPassword"
        android:layout_alignBottom="@+id/MedicalCardPassword"
        android:layout_alignParentLeft="true"
        android:text="密码：" />

    <EditText
        android:id="@+id/MedicalCardTypeID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/MedicalCardPassword"
        android:layout_alignLeft="@+id/MedicalCardPassword"
        android:layout_toLeftOf="@+id/new_card"
        android:ems="10"
        android:text="1114" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/MedicalCardTypeID"
        android:layout_alignBottom="@+id/MedicalCardTypeID"
        android:layout_toLeftOf="@+id/MedicalCardTypeID"
        android:text="类型：" />

    <Button
        android:id="@+id/card_booking_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="使用此诊疗卡预定" />

    <Button
        android:id="@+id/new_card_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/MedicalCardTypeID"
        android:layout_alignBottom="@+id/MedicalCardTypeID"
        android:layout_alignParentRight="true"
        android:text="新建" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/OwnerSex"
        android:text="性别：" />

</RelativeLayout>