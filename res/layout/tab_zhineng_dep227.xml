<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:background="@color/white"
    android:paddingLeft="5dp"
    android:paddingRight="5dp" >

    <TextView
        android:id="@+id/huoqu_dep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:textColor="@color/tab_text" />

    <ImageView
        android:id="@+id/title_zhineng_dep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tab2_title_margintop"
        android:layout_centerHorizontal="true"
        android:background="@drawable/first_zhinengbut_press2" />

    <ImageButton
        android:id="@+id/tab2_booking_dep"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/title_zhineng_dep"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_weight="1"
        android:background="@layout/tab2_booking_press" />

</RelativeLayout>