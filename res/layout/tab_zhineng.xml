<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:background="@color/white"
    android:paddingLeft="5dp"
    android:paddingRight="5dp" >

    <TextView
        android:id="@+id/huoqu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:textColor="@color/tab_text" />

    <ImageView
        android:id="@+id/title_zhineng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:layout_centerHorizontal="true"
        android:background="@drawable/first_zhinengbut_press" />

    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/title_zhineng"
        android:layout_marginTop="100dp" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageButton
                android:id="@+id/tab2_booking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tab2_booking_press" />

            <ImageButton
                android:id="@+id/tab2_healthfoler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tab2_file_press" />

            <ImageButton
                android:id="@+id/tab2_moneycheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tab2_money_press" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageButton
                android:id="@+id/tab2_eachother"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tab2_each_press" />

            <ImageButton
                android:id="@+id/tab2_healthinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tab2_all_press" />

            <ImageButton
                android:id="@+id/tab2_tellphone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tab2_offer_press" />

        </TableRow>
    </TableLayout>

	
</RelativeLayout>